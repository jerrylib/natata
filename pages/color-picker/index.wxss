.main {
  /* height: 100vh; */
  max-height: 900px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  gap: 25px;
  padding: 10px;
}

.header {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.reset {
  margin-left: 1rem;
  font-weight: bold;
  color: #fff;
  padding: 5px 10px;
  border-radius: 5px;
  background: #f87171;
}

.item {
  width: 100px;
  height: 100px;
  text-align: center;
}

.text {
  line-height: 100px;
  font-weight: bold;
}